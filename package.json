{
  "name": "github-mastery",
  "version": "1.0.0",
  "description": "Domínio total do GitHub: API, automações, integrações e ferramentas avançadas",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node cli-tools/gh-cli.js",
    "homepage": "start index.html",
    "webhook": "node webhooks/webhook-server.js",
    "example": "node examples/basic-api-usage.js",
    "validate-env": "node -e \"import('./utils/env-validator.js').then(m => m.runFullValidation())\"",
    "test": "echo 'Testes serão implementados em breve'",
    "lint": "eslint **/*.js --ignore-pattern node_modules/",
    "lint:fix": "eslint **/*.js --fix --ignore-pattern node_modules/",
    "format": "prettier --write **/*.js --ignore-path .gitignore",
    "format:check": "prettier --check **/*.js --ignore-path .gitignore",
    "dev": "nodemon webhooks/webhook-server.js",
    "validate": "npm run lint && npm run format:check",
    "clean": "rm -rf node_modules package-lock.json || echo 'Limpeza concluída'",
    "setup": "npm install && npm run format && npm run validate-env",
    "ci": "npm run validate && npm run validate-env",
    "health": "npm run validate-env && echo 'Projeto saudável!'"
  },
  "keywords": [
    "github",
    "api",
    "automation",
    "cli",
    "webhooks",
    "git"
  ],
  "author": "João",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@octokit/auth-token": "^4.0.0",
    "dotenv": "^16.3.1",
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.1.1",
    "nodemon": "^3.0.2"
  }
}

